 <% include reutilizable/_header %>
  

  

    <div class="container">
        <div class="row">
         <!--formulario-->
         <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/Guardar" method="POST">
                        <div class="from-group">
                            <input type="text" name="Nombre" placeholder="Inserte un Nombre" class="from-group">
                           </div>
                           <div class="form-group">
                            <textarea name="Apellido"  placeholder="Inserte un Apellido" class="form-group"></textarea>
                            <div>
                              <input type="text" name="Edad" placeholder="Inserte su Edad" class="from-group">
                           </div>
                           <div>
                            <input type="text" name="category" placeholder="Inserte la categoria" class="from-group">
                         </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Guardar
                        </button>
                    </form>
                </div>
            </div>
          </div>   
          <!--lis-->
          <div class="col-md-7">
           <table class="table table-bordered table-hover">
            <thead>
              <tr>
                 <th>NÂ°</th>   
                 <th>Nombre</th>
                 <th>Apellido</th>
                 <th>Edad</th>
                 <th>category</th>
                 <th>Action</th>
              </tr>    
            </thead>
            <tbody>
              <% for(i = 0; i < tasks.length; i++){ %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= tasks[i].Nombre %></td>
                <td><%= tasks[i].Apellido %></td>
                <td><%= tasks[i].Edad %></td>
                <td><%= tasks[i].category %></td>
                <td>
                    <a href="/Borrar/<%= tasks[i]._id %>" class="btn btn-danger">Borrar</a>
                    <a href="/Listo/<%= tasks[i]._id %>"
                     class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark'  %>">Listo</a>
                     <a href="/Editar/<%= tasks[i]._id %>" class="btn btn-info">Editar</a>
                </td>
                  
              </tr>
             <% } %>

           
           </tbody> 
         </table>
        </div>
     </div>
   </div>
<% include reutilizable/_fooder %>

